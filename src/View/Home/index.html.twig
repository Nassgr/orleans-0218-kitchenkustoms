{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} - Accueil{% endblock %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
            </div>
            <div class="col-md-6 ">
                <h2 class="sr-only">Galerie</h2>
                <div class="row ">
                {% for i in 0..5 %}
                        <div class="col-md-4 col-xs-6 gallery_container">
                            <a href="assets/images/galleryhome/home{{ i+1 }}.jpg" class="gallery_home gallery ">
                                <img class="img-responsive gallery_image center-block " src="assets/images/galleryhome/Thumb/thumb{{ i+1 }}.jpg" alt="placeholder">
                            </a>
                        </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
