{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} - Atelier{% endblock %}

{% block content %}
    <section class="section">
        <div class="container">
            <h1 class="text-center">L'Atelier</h1>
            <h2 class="text-center add-info">Pour faire r<span class="e-cute">é</span>parer son v<span class="e-cute">é</span>lo ou changer des pi<span class="e-cute">è</span>ces, passez par notre
                atelier&nbsp;!</h2>
            <div class="row">
                <div class="col-md-12">
                    <img src="assets/images/atelier.jpg" class="img-responsive center-block" alt="Photo atelier">
                </div>
            </div>
            <h2>Nos r<span class="e-cute">é</span>parations courantes</h2>

            <div class="row">
                {% for category, items in itemsGroupByCategories %}
                    <div class="col-sm-6">
                        <div class="border-style">
                            <h3 class="title-style">{{ category }}
                            </h3>
                            <ul class="list-group">
                                {% for item in items %}
                                    <li class="list-group-item borderless"><img class="img-boulon" src="assets/images/bolt_BLACK_24.svg" alt="icône boulon">
                                        <span class="badge">{{ item.price|number_format(2,',') }} €</span>
                                        {{ item.name }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                    {% if loop.index0%2 ==1 %}
                        <div class="clearfix hidden-xs"></div>
                    {% endif %}
                {% endfor %}
            </div>

        </div>
    </section>
    <section class="section">
        <div class="container text-center">
            <a href="assets/pdf/tarifs-workshop.pdf" target="_blank" class="btn btn-lg btn-download">
                Télécharger la liste complète de nos tarifs</a>
        </div>
    </section>
{% endblock %}
