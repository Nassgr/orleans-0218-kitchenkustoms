{% extends 'layout-admin.html.twig' %}

{% block title %}{{ parent() }} - Atelier - Catégories{% endblock %}

{% block content %}
    <section class="container">
        <h1>Atelier</h1>
        <h3>Modifier la catégorie "{{ category.name }}"</h3>
        <form method="post" role="form">
            <div class="form-group">
                <label for="form-name">Nom</label>
                <input type="text" class="form-control" name="name" id="form-name" value="{{ category.name }}"
                       maxlength="45"
                       required>
                {% if formError.name %}
                    {% for error in formError.name %}
                        <span class="help-block">{{ error }}</span>
                    {% endfor %}
                {% endif %}
            </div>
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        </form>
    </section>
{% endblock %}