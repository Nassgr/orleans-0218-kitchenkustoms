{% extends 'layout-admin.html.twig' %}

{% block content %}
    <section class="container">
        <div class="row">
            <h1>Ajout d'un nouveau Vélo</h1>
        </div>
        <div class="row">
            <form method="POST" action="/admin/bike/add">
                <div class="form-group">
                    <label for="name">Nom*</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Le nom du vélo" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="description"
                              placeholder="La description du vélo"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" class="form-control btn btn-success" id="submit">
                </div>
            </form>
            <div class="row">
                <small>* : champ obligatoire</small>
            </div>
        </div>
    </section>
{% endblock %}